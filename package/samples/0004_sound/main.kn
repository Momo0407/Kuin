; Sound Sample (C)Kuina-chan

var sndSe: snd@Snd

func main()
	var wndMain: wnd@Wnd :: wnd@makeWnd(null, %normal, 1024, 768, "Sound Sample")
	var btnPlaySe: wnd@Btn :: wnd@makeBtn(wndMain, 12, 12, 150, 23, %fix, %fix, "Play SE") {SEボタンの作成}
	do btnPlaySe.onPush :: btnPlaySeOnPush {SEボタンが押されたときのイベント}
	do @sndSe :: snd@makeSnd("res/se.wav", false) {サウンドを非ストリーミングで読み込む}
	while(wnd@act())
	end while

	func btnPlaySeOnPush(wnd: wnd@Btn)
		do @sndSe.play(0.0) {SEボタンが押されたらSEを再生}
	end func
end func
