	do @radioEnvWnd.setChk(true)
	do @radioEnvCui :: wnd@makeRadio(@groupEnv, 6, 40, 173, 16, %fix, %fix, "CUI")
	do @editFile :: wnd@makeEdit(@wndMain, 827, 359, 185, 19, %move, %fix)
	do @editFile.readonly(true)
