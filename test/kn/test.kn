var wndMain: wnd@Wnd
var wndMain2: wnd@Wnd

func main()
	do @wndMain :: wnd@makeWnd(null, %normal, 1600, 900, "")
	do @wndMain2 :: wnd@makeWnd(null, %normal, 1600, 900, "")
	var draw: wnd@Draw :: wnd@makeDraw(@wndMain, 0, 0, 1600, 900, %scale, %scale, true)
	var draw2: wnd@Draw :: wnd@makeDraw(@wndMain2, 0, 0, 1600, 900, %scale, %scale, false)
	var x: float :: 0.0
	while(wnd@act())
		do x :+ 1.0 / 60.0
		do draw@target(draw)
		do draw@rect(100.0 + lib@sin(x) * 50.0, 100.0, 100.0, 100.0, 16#FF00FF00)
		do draw@target(draw2)
		do draw@rect(100.0 + lib@sin(x) * 50.0, 100.0, 100.0, 100.0, 16#FFFF0000)
		do draw@target(draw)
		do draw@render(0)
		do draw@target(draw2)
		do draw@render(60)
	end while
end func
