	do @scrollXSrc.set(0, 0, 1, 0)
	do @scrollYSrc :: wnd@makeScrollY(@plainSrc, 780{786}, 0{6}, 17, 574, %move, %scale)
	do @scrollYSrc.set(0, 0, 1, 0)
